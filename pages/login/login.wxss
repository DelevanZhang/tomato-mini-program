page{
  background-color: #EEF7F6;
}
.login-userAvatarUrl-wrapper{
  width: 237rpx;
  height: 237rpx;
  border: 16rpx solid #F6705A;
  border-radius: 50%;
  overflow: hidden;
  margin: 243rpx auto 20rpx auto;
}
.login-userNickName{
  font-size: 28rpx;
  color:#F6705A;
  text-align: center;
  position: relative;
}
.login-userNickName::after{
  content: "";
  position: absolute;
  bottom: -10rpx;
  width: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 2rpx;
  border: 1px solid #FE996F;
}
.login-z-button{
  margin-top: 60rpx;
}
.login-bindPC{
  font-size: 20rpx;
  color:#F6705A;
  text-align: center;
  margin-top:50rpx;
}
.login-login{
  width: 540rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(45deg, #fe996f 0%, #207cca 0%, #fe996f 0%, #f6705a 100%);
  box-shadow: 0 4rpx 8rpx 0 #da0000, 0 11rpx 32rpx 0 #f6705a;
  font: normal 26rpx PingFangSC-Regular;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
